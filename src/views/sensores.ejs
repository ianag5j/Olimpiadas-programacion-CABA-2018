<% include partials/_header %>
<!-- 
    Los div son utilizados para tener una mejor organizacion 
    en la pagina, ademas tienen una clase para acomodarlos mejor
-->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>id</td>
            <td>Valor</td>
            <td>Descripcion</td>
            <td>Fecha</td>
            <td>Acciones</td>
          </tr>
        </thead>
        <tbody>
          <!-- 
              Mientras que haya datos almacenados en la base de datos
              habra un for, en donde recorrera los datos, segun la
              posicion del dato, mostrara sus atributos
          -->
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].valor %></td>
                <td><%= data[i].descripcion %></td>
                <td><%= data[i].fecha %></td>
                <td>
                  <!-- 
                      Estos son los botones de Modificar o Eliminar el el campo
                      de la base de datos.
                      Estos tienen un href, que por URL haran sus respectivas acciones
                      por medio de la id.
                  -->
                  <a href="/update/<%= data[i].id %>" class="btn btn-info">Modificar</a>
                  <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card-body">
      

      </div>  
    </div>
  </div>
</div>

<% include partials/_footer %>
